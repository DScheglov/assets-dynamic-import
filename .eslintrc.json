{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "plugins": ["jest"],
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "import/no-unresolved": "error"
  }
}
